<div id="<%= dom_id product %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Title:</strong>
    <%= product.title %>
  </p>

  <div>
  <% product.images.each do |image| %>
    <%= image_tag(image.variant(:thumb)) %>
  <% end %>
  </div>

 <%# turbo_frame_tag product.conversations.new do  %>
      <%= link_to "Message Seller", new_product_conversation_path(product), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
<%# <% end %> %>
  <% if action_name != "show" %>
      <%= link_to "Show this product", product, data: {turbo_frame: "_top"}, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
<%= turbo_frame_tag product do  %>
      <%= link_to "Edit this product", edit_product_path(product), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
<% end %>
  <div class="inline-block ml-2">
    <%= button_to "Destroy this product", product_path(product), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
  </div>

 <hr class="mt-6">
  <% end %>
</div>
