<div class="avatar <%= css_class%>">
    <% if user.avatar.variant(:thumb) %>
        <%= image_tag user.avatar.variant(:thumb) %>
    <% else %>
        <?xml version="1.0" encoding="UTF-8"?>
        <svg version="1.1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 50 50">
          <rect width="100%" height="100%" fill="<%= user_color(user) %>"/>
          <text fill="#fff" font-family="Helvetica,Arial,sans-serif" font-weight="500" x="50%" y="55%" dominant-baseline="middle" text-anchor="middle">
            <%= user_initials(user) %>
          </text>
      </svg>
    <% end %>
</div>