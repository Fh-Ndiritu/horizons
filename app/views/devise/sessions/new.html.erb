<section class="mt-0 bg-gray-100  w-screen mx-0 h-screen py-6">
  <div class="w-full lg:w-4/12 px-4 mx-auto pt-0">
    <div class="relative flex flex-col min-w-0 break-words w-full mb-6 shadow-xl bg-white rounded-lg border-0">
      <div class="rounded-t mb-0 px-6 py-6">
            <h2 class="text-center w-full mb-4 text-2xl font-bold">Login</h2>
        <div class="btn-wrapper text-center">
          <%= render "devise/shared/links" %>
        </div>
        <hr class="mt-6 border-b-1 border-blueGray-300">
      </div>
      <div class="flex-auto px-4 lg:px-10 py-10">
        <div class="text-blueGray-400 text-center mb-3 font-bold">
          <small>Or sign in with credentials</small>
        </div>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="relative w-full mb-5">
            <%= f.label :email, class: "block uppercase  text-xs font-bold mb-2"%>
            <%= f.email_field :email, autofocus: true, autocomplete: "email",  placeholder:"example@gmail.com", class:"login-field"%>
          </div>

          <div class="relative w-full mb-5">
            <%= f.label :password, class: "block uppercase  text-xs font-bold"%>
            <% if @minimum_password_length %>
            <em class="text-xs">(<%= @minimum_password_length %> characters minimum)</em>
            <% end %>
            <%= f.password_field :password, autocomplete: "current-password" , placeholder: "Password", class:"login-field"%>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="field cursor-pointer m-2">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
        <% end %>

          <div class="actions">
            <%= f.submit "Login", class: "btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>


