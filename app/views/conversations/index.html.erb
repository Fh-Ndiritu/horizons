  <div class="flex  items-center text-center my-10">
    <h1 class="font-bold text-4xl w-full flex-none">Messages</h1>
  </div>

  <div class="flex h-screen pb-24 w-full" data-controller="conversations">
      <div id="conversations" class="  w-2/6 flex-none border-r border-t pl-2 py-2 border-gray-200 rounded-lg">
        <h4 class="text-xl text-bold">Search Messages </h4>
        <div>
          <%= form_with(url: search_conversations_url, method: :post, class: "search") do  |form|%>
            <div class="my-5 pr-4">
              <%= form.label :query, "Search", class: "mb-2 text-sm font-medium text-gray-900 sr-only dark:text-gray-300" %>
              <div class="relative">
                  <div class="flex absolute inset-y-0 left-0 items-center pl-3 pointer-events-none">
                      <svg class="w-5 h-5 text-gray-500 dark:text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path></svg>
                  </div>
                  <%= form.text_field :query, placeholder: "car name, user name, message text ...", class: "block p-4 pl-10 w-full text-base text-gray-900 bg-gray-50 rounded-lg border border-gray-300 focus:ring-red-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" %>
                  <%= form.submit 'Search Now', class: "text-white absolute right-2.5 bottom-2.5 bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-4 py-2 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800" %>
              </div>
            </div>

          <% end %>
        </div>
        <div class="custom_scroll_bar h-screen sm:h-5/6 overflow-x-hidden overflow-y-scroll ">
            <%= turbo_frame_tag "chats" do%>
                <%= render @conversations %>
            <% end %>
        </div>
      </div>
      <%= turbo_frame_tag "messages", class: "flex-none flex items-center justify-center  h-screen sm:h-full  w-4/6 " do %>
            <%= image_tag("icons/loading.gif") %>
      <% end %>
  </div>
</div>
